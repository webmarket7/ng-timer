app-timer
app-data-table(
    className='time-entries'
    '[head]'='tableHead'
    '[body]'='(timeTrackerState | async).timeEntries'
)
    ng-template('#row'='' 'let-entry'='entry' 'let-index'='index')
        td(
            '*ngFor'='let cell of (entry | timeEntry); index as i'
            '[ngClass]'='tableHead[i]'
            '[ngSwitch]'='cell'
        )
            .table-cell-wrapper
                ng-container('*ngSwitchCase'="'action'")
                    .action-button.delete('(click)'='deleteEntry(index)')
                ng-container('*ngSwitchDefault'='')
                    span {{ cell }}
